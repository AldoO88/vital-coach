<div class="container">
    <div class="row">
        <div class="col-md-2">
            <div class="box">

            </div>
        </div>
        <div class="col-md-8">
            <div class="box">
                <div class="card mb-3" style="max-width: 640px;">
                    <div class="row g-0">
                        {{#if foundTrainer}}
                        <div class="col-md-4">
                            <img src="{{foundTrainer.imageProfile}}"
                                class="rounded float-start rounded-circle mx-auto p-2" alt="" width="160px"
                                height="160px">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">{{foundTrainer.name}} {{foundTrainer.lastName}}</h5>
                                <p class="card-text">From {{foundTrainer.from}}</p>
                                <p class="card-text"> <small class="text-body-secondary">{{age}} years</small></p>
                                <p class="card-text"> <small class="text-body-secondary">{{foundTrainer.gender}}</small>
                                </p>
                                <p class="card-text"><small class="text-body-secondary">Username {{username}}</small>
                                </p>
                                </p>
                            </div>
                        </div>
                        {{else}}
                        <div class="col-md-4">
                            <img src="https://cdn0.iconfinder.com/data/icons/communication-456/24/account_profile_user_contact_person_avatar_placeholder-512.png"
                                class="rounded float-start rounded-circle mx-auto p-2" alt="">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">

                                <h5 class="card-title">{{username}}</h5>
                                <p class="card-text"></p>
                                <p class="card-text"><small class="text-body-secondary">From</small></p>
                                <p class="card-text"><small class="text-body-secondary">Username {{username}}</small>
                                </p>

                            </div>
                        </div>

                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="box">


            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <div class="box">


            </div>
        </div>
        <div class="col-md-8">
            <div class="box">
                <div class="card mb-3" style="max-width: 640px;">
                    <div class="card-header">
                        Professional information
                    </div>
                    <div class="card-body">

                        <div class="mb-3">
                            <label for="exampleInput" class="form-label">Training</label>
                            <p class="card-text">{{foundTrainer.training}}</p>
                        </div>

                        <div class="mb-3">
                            <label for="exampleInput" class="form-label">Description</label>
                             <p class="card-text">{{foundTrainer.description}}</p>
                        </div>
                        <div class="mb-3">
                            <label for="exampleInput" class="form-label">consultation price</label>
                            <p class="card-text">{{foundTrainer.price}}</p>
                        </div>
                    </div>
                </div>
                <div class="card mb-3" style="max-width: 640px;">
                    <div class="card-header">
                        Certifications
                    </div>
                    <div class="card-body">

                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Intitution</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody class="table-group-divider">
                                {{#each foundTrainer.courses}}
                                <tr>
                                    <th scope="row">1</th>
                                    <td>{{title}}</td>
                                    <td>{{institution}}</td>
                                    <td><a href="#" class="btn btn-info" tabindex="-1" role="button"
                                            aria-disabled="true">detail</a></td>
                                </tr>
                                {{/each}}

                            </tbody>
                        </table>



                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="box">


        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <div class="box">

            </div>
        </div>
        <div class="col-md-8">
            <div class="box">
                <div class="card mb-3" style="max-width: 640px;">
                    <div class="card-header">
                        Schedule
                    </div>
                    <div class="card-body">
                         
                        <div class="container callendar-body">
                            <div class="row d-flex justify-content">
                                <form action="/patient/create/{{calendarId}}/appointment" method="post">
                                    <table class="table table-bordered" style="width: 500px;">
                                        <tr>
                                            <th scope="col" class="col-1">Timezone</th>
                                            <th scope="col" class="col-1">Lun</th>
                                            <th scope="col" class="col-1">Mar</th>
                                            <th scope="col" class="col-1">Mie</th>
                                            <th scope="col" class="col-1">Jue</th>
                                            <th scope="col" class="col-1">Vie</th>
                                            <th scope="col" class="col-1">Sab</th>
                                            <th scope="col" class="col-1">Dom</th>
                                        </tr>
                                        {{#each rows}}
                                        <tr>
                                            <td class="p-0">
                                                <div class="box"> {{hour}}:00 </div>
                                            </td>

                                            {{#each cols}}
                                            {{#if isBooked}}
                                            <td class="p-0">
                                                <input type="checkbox" class="btn-check"
                                                    id="btn-check-outlined-{{day}}-{{hour}}" checked autocomplete="off">
                                                <label class="btn btn-danger d-block hide-text"
                                                    for="btn-check-outlined-{{day}}-{{hour}}">+</label>
                                            </td>
                                            {{else if isOpen}}
                                            <td class="p-0">
                                                <input type="checkbox" class="btn-check" id="btn-check-{{day}}-{{hour}}"
                                                    autocomplete="off" name="{{day}}" value="{{hour}}">
                                                <label class="btn btn-success d-block hide-text"
                                                    for="btn-check-{{day}}-{{hour}}"> + </label>
                                            </td>
                                            {{else}}
                                            <td class="p-0"></td>
                                            {{/if}}
                                            {{/each}}
                                        </tr>
                                        {{/each}}
                                    </table>
                                    {{#if isLoggedIn}}
                                    <button class="btn btn-primary" type="submit"> submit</button>
                                    {{else}}
                                    <a href="/auth/login" class="btn btn-info"> Login </a> to start using the app </h1>
                                     {{/if}}
                                </form>
                            </div>
                        </div>
                        
                    </div>
                    
                </div>

            </div>
        </div>
        <div class="col-md-2">
            <div class="box">

            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-2">
            <div class="box">

            </div>
        </div>
        <div class="col-md-8">
            <div class="box">

            </div>
        </div>
        <div class="col-md-2">
            <div class="box">

            </div>
        </div>
    </div>
</div>